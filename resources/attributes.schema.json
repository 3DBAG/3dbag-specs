{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "3DBAG Attribute Specification Schema",
  "description": "A schema for the attributes.json file, which defines the specifications for attributes in the 3DBAG data set.",
  "type": "object",
  "additionalProperties": {
    "$ref": "#/definitions/attribute"
  },
  "definitions": {
    "attribute": {
      "type": "object",
      "required": [
        "type",
        "source",
        "nullable",
        "appliesTo",
        "precision",
        "unit",
        "valueFormat",
        "semanticType",
        "values",
        "description",
        "scale"
      ],
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "int",
            "float",
            "bool",
            "string",
            "date",
            "datetime",
            "array"
          ],
          "description": "How is the attribute stored? As an int, as a float etc."
        },
        "source": {
          "type": [
            "string",
            "null"
          ],
          "description": "The source of this attribute. It can be another data set like the BAG or a software that generates this attribute."
        },
        "nullable": {
          "type": [
            "boolean",
            "null"
          ],
          "description": "Whether null values are valid for this attribute or they indicate an error in the process."
        },
        "appliesTo": {
          "properties": {
            "cesium3dtiles": {
              "$ref": "#/definitions/format-cesium3dtiles"
            },
            "cityjson": {
              "$ref": "#/definitions/format-cityjson"
            },
            "gpkg": {
              "$ref": "#/definitions/format-gpkg"
            }
          },
          "minProperties": 0,
          "additionalProperties": false
        },
        "precision": {
          "type": [
            "integer",
            "null"
          ],
          "description": "Precision for numeric values."
        },
        "unit": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "$ref": "#/definitions/translation"
            }
          ],
          "description": "Unit of measurement."
        },
        "valueFormat": {
          "type": [
            "string",
            "null"
          ],
          "description": "How is the attribute formatted? Eg. YYYY-MM-DD."
        },
        "semanticType": {
          "type": "string",
          "description": "What is the attribute? A year, a day, a millisecond, an error etc."
        },
        "values": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "type": "object",
              "additionalProperties": {
                "$ref": "#/definitions/translation"
              }
            }
          ],
          "description": "Possible values for categorical attributes."
        },
        "description": {
          "$ref": "#/definitions/translation"
        },
        "scale": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "$ref": "#/definitions/translation",
              "description": "How is the attribute measured? On an interval scale, on a nominal scale etc."
            }
          ]
        },
        "items": {
          "$ref": "#/definitions/array-item",
          "description": "Definition of the items of an array-type attribute."
        }
      }
    },
    "translation": {
      "type": "object",
      "required": [
        "nl",
        "en"
      ],
      "properties": {
        "nl": {
          "type": "string"
        },
        "en": {
          "type": "string"
        }
      }
    },
    "array-item": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "int",
            "float",
            "bool",
            "string",
            "date",
            "datetime",
            "null"
          ]
        },
        "semanticType": {
          "type": "string"
        },
        "description": {
          "$ref": "#/definitions/translation"
        },
        "scale": {
          "$ref": "#/definitions/translation"
        }
      }
    },
    "format-cityjson": {
      "type": "object",
      "properties": {
        "locations": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "Building",
              "BuildingPart",
              "RoofSurface",
              "WallSurface",
              "GroundSurface",
              "ClosureSurface",
              "OuterCeilingSurface",
              "OuterFloorSurface",
              "InteriorWallSurface",
              "CeilingSurface",
              "FloorSurface"
            ]
          },
          "description": "The CityObject or Semantic type where the attribute is located."
        }
      }
    },
    "format-gpkg": {
      "type": "object",
      "properties": {
        "locations": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "pand",
              "lod12_2d",
              "lod12_3d",
              "lod13_2d",
              "lod13_3d",
              "lod22_2d",
              "lod22_3d"
            ]
          },
          "description": "The GeoPackage layer where the attribute is located."
        }
      }
    },
    "format-cesium3dtiles": {
      "type": "object",
      "properties": {
        "locations": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "lod12",
              "lod13",
              "lod22"
            ]
          },
          "description": "The LoD-tileset of 3D Tiles where the attribute is located."
        }
      }
    }
  }
}